{% extends "base_overview.html.twig" %}

{% trans_default_domain 'uteg' %}

{% block title %}{{ 'competitionlist.addcomp.title'|trans }}{% endblock %}

{% block header %}
<link href="/jqueryui/jquery-ui.css" rel="stylesheet">
<script src="/jqueryui/jquery-ui.min.js"></script>
{% endblock %}

{% block javascript_docready %}
$('#appbundle_competition_startdate').datepicker({
	changeMonth: true,
	changeYear: true,
	dateFormat: 'yy-mm-dd',
	minDate: 0,
	onClose: function( selectedDate ) {
		$( "#appbundle_competition_enddate" ).datepicker( "option", "minDate", selectedDate );
	}
});

$('#appbundle_competition_enddate').datepicker({
	changeMonth: true,
	changeYear: true,
	dateFormat: 'yy-mm-dd',
	minDate: 0,
	onClose: function( selectedDate ) {
		$( "#appbundle_competition_startdate" ).datepicker( "option", "maxDate", selectedDate );
	}
});
{% endblock %}

{% block content %}
	<div id="comp">
        <div id="triangle"></div>
        <h1>{{ 'competitionlist.addcomp.header'|trans }}</h1>
        <div class="content">
        	<form action="{{ path('addNewComp') }}" {{ form_enctype(form) }} method="POST">
            	{{ form_widget(form) }}
                {{ form_rest(form) }}
                <div>
                    <input type="submit" value="{{ 'competitionlist.addcomp.submit'|trans() }}" />
                </div>
			</form>
        </div>
    </div>
{% endblock %}