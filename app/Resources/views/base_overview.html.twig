{% trans_default_domain 'uteg' %}

<html>
<head>
    <title>{% block title %}{% endblock %}</title>
    <link href='http://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <link href="{{ asset("css/bootstrap.min.css") }}" rel="stylesheet">
    <link href="{{ asset("css/bootstrap-dialog.min.css") }}" rel="stylesheet">
    <link href="{{ asset("css/bootstrap-datepicker.css") }}" rel="stylesheet">
    <script src="{{ asset("js/bootstrap.min.js") }}"></script>
    <script src="{{ asset("js/bootstrap-datepicker.js") }}"></script>
    <script src="{{ asset("js/bootstrap-dialog.min.js") }}"></script>
    {% block header %}{% endblock %}
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        #comp h1, #profile h1 {
            margin: 0 !important;
        }

        body {
            background: #567;
            font-family: 'Quicksand', sans-serif;
        }

        .button-holder {
            width: 400px;
            margin: 0 auto;
            margin-top: 1%;
        }

        .button {
            width: 110px;
            background: #3399cc;
            display: inline-block;

            padding: 10px;
            text-align: center;
            text-decoration: none;
            color: #fff;
            transition: background .3s;
            -webkit-transition: background .3s;
            cursor: pointer;
        }

        .button:hover {
            background: #2288bb;
        }

        #comp, #profile {
            width: 800px;
            margin: 0 auto;
            margin-top: 8px;
            margin-bottom: 2%;
            transition: opacity 1s;
            -webkit-transition: opacity 1s;
        }

        #triangle {
            width: 0;
            border-top: 12x solid transparent;
            border-right: 12px solid transparent;
            border-bottom: 12px solid #3399cc;
            border-left: 12px solid transparent;
            margin: 0 auto;
        }

        #comp h1, #profile h1 {
            background: #3399cc;
            padding: 20px 0;
            font-size: 140%;
            font-weight: 300;
            text-align: center;
            color: #fff;
        }

        form, div.content {
            background: #f0f0f0;
            padding: 4% 4%;
        }

        input, select {
            width: 100% !important;
            background: #fff;
            margin-bottom: 2%;
            border: 1px solid #ccc;
            padding: 2%;
            font-family: 'Open Sans', sans-serif;
            font-size: 95%;
            color: #555;
            height: auto !important;
        }

        select {
            width: 25%;
        }

        div.g-recaptcha {
            margin-bottom: 4%;
        }

        input[type="checkbox"] {
            width: 10%;
        }

        input[type="submit"] {
            width: 100%;
            background: #3399cc;
            border: 0;
            padding: 2%;
            font-family: 'Open Sans', sans-serif;
            font-size: 100%;
            color: #fff;
            cursor: pointer;
            transition: background .3s;
            -webkit-transition: background .3s;
        }

        ul, div.error {
            list-style: none;
            color: red;
        }

        div.flash-message-success {
            padding: 1%;
            color: green;
            font-size: 13pt;
        }

        div.flash-message-error {
            padding: 1%;
            color: red;
            font-size: 13pt;
        }

        i.icon:before {
            content: "";
            background-size: 20px 20px;
            background-repeat: no-repeat;
            background-position: 0;
            padding-left: 20px;
            font-size: medium;
        }

        i.icon-delete-black:before {
            background-image: url('{{ asset("img/icons/icon-delete-black.png") }}');
        }

        i.icon-delete-red:before {
            background-image: url('{{ asset("img/icons/icon-delete-red.png") }}');
        }

        i.icon-view-black:before {
            background-image: url('{{ asset("img/icons/icon-view-black.png") }}');
        }

        i.icon-view-green:before {
            background-image: url('{{ asset("img/icons/icon-view-green.png") }}');
        }

        {% block css %}{% endblock %}
    </style>

    {% block script %}{% endblock %}

    <script>
        $(document).ready(function () {
            $('.button').click(function () {
                window.location.href = $(this).attr('href');
            });

            if ($('#comp').length > 0) {
                $('.button-holder').css('padding', '0 0 0 270px');
            }

            if ($('#profile').length > 0) {
                $('.button-holder').css('padding', '0 0 0 0');
            }
        });
    </script>
</head>
</html>
<body>
<div class="button-holder">
    <span href="/competitions" class="button">{{ 'competitionlist.nav_button'|trans }}</span>
    <span href="/profile/edit" class="button">{{ 'profile.edit.nav_button'|trans }}</span>
    <span href="/logout" id="logout" class="button"> {{ 'competitionlist.logout'|trans }}</span>
</div>
{% block content %}{% endblock %}
{% block dialog %}{% endblock %}
</body>