{% trans_default_domain 'uteg' %}

{% extends "baseAnon.html.twig" %}

{% block title %}{{ 'egt.judging.title'|trans }}  {{ device |trans }}{% endblock %}

{% block cssplugins %}
{% endblock %}

{% block jsplugins %}
{% endblock %}

{% block css %}
    <style>

    </style>
{% endblock %}

{% block script %}
    <script>
        $(document).ready(function () {
            {% for key, devicestarters in starters %}
            {% set device = key %}
            {% for starter in devicestarters %}
            $('#{{ loop.parent.key }}_table tbody').append('<tr><td>{{ starter.firstname }}</td><td>{{ starter.lastname }}</td><td>{{ starter.club }}</td><td>{{ starter.category }}</td><td><input class="grade form-control" data-starter="{{ starter.id }}"/></tr>');
            {% endfor %}
            {% else %}
            $('#{{ key }}').html('<h1>{{ 'egt.judging.pause'|trans }}<h1>');
            {% endfor %}

            $('#{{ round }}_li').addClass('active');
            $('#{{ round }}_div').addClass('active');
        });
    </script>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div id="panel_judging" class="panel panel-default nav-tabs-vertical" style="min-height: 400px;">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'egt.judging.header'|trans }} {{ device |trans }}</h3>
                    <ul class="panel-controls">
                        <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>
                    </ul>
                </div>
                <div class="tabs">
                    <ul class="nav nav-tabs">
                        {% for device in devices %}
                            <li id="{{ loop.index }}_li">
                                <a href="#{{ loop.index }}_div" data-toggle="tab"
                                   aria-expanded="true">{{ 'egt.judging.division'|trans }} {{ loop.index }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="panel-body tab-content" style="width: 90%">
                    {% for device in devices %}
                        <div id="{{ loop.index }}_div" class="tab-pane"  style="width: 100%">
                            <table id="{{ device }}_table" class="table table-striped table-hover"
                                   data-device="{{ device }}"
                                   width="100%">
                                <thead>
                                <tr>
                                    <th class="all">{{ 'egt.judging.table.firstname'|trans }}</th>
                                    <th class="all">{{ 'egt.judging.table.lastname'|trans }}</th>
                                    <th class="all">{{ 'egt.judging.table.club'|trans }}</th>
                                    <th class="all">{{ 'egt.judging.table.category'|trans }}</th>
                                    <th class="all">{{ 'egt.judging.table.grade'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                            <button class="btn pull-right btn-success save" data-device="{{ device }}"><i class="fa fa-save"></i>{{ 'egt.judging.table.save'|trans }}</button>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}