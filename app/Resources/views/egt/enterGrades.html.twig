{% trans_default_domain 'uteg' %}

{% extends "base.html.twig" %}

{% block title %}{{ 'egt.grades.title'|trans }}{% endblock %}

{% block cssplugins %}
{% endblock %}

{% block jsplugins %}
{% endblock %}

{% block css %}
    <style>

    </style>
{% endblock %}

{% block script %}
    <script>

    </script>
{% endblock %}

{% block content %}
    {% if error is not defined %}
        <div class="row">
            <div class="col-md-12">
                <div id="panel_ranking" class="panel panel-default nav-tabs-horizontal" style="min-height: 400px;">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'egt.grades.header'|trans }}</h3>
                        <ul class="panel-controls">
                            <li><a target="_blank" class="control-primary" id="report-file-button"><span
                                            class="fa fa-file-pdf-o"></span></a></li>
                            <li><a href="#" class="control-primary panel-fullscreen"><span class="fa fa-expand"></span></a>
                            </li>
                        </ul>
                    </div>
                    <div class="tabs">
                        <ul class="nav nav-tabs">
                            {% for category in categories %}
                                <li id="{{ loop.index }}_li" {% if loop.first %}class="active"{% endif %}>
                                    <a class="tab" href="#{{ loop.index }}_div" data-toggle="tab"
                                       aria-expanded="true" data-id="{{ category.name }}">{{ category.name }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="panel-body tab-content" style="width: 90%">
                        {% for category in categories %}
                            <div id="{{ loop.index }}_div" class="tab-pane {% if loop.first %}active{% endif %}"
                                 style="width: 100%">

                            </div>
                        {% endfor %}
                        {% for key, device in devices %}
                            <div id="{{ loop.index }}_div" class="tab-pane" style="width: 100%">
                                <table id="{{ device }}_table" data-device="{{ deviceid }}"
                                       class="table table-striped table-hover"
                                       width="100%">
                                    <thead>
                                    <tr>
                                        <th class="all">{{ 'egt.judging.table.firstname'|trans }}</th>
                                        <th class="all">{{ 'egt.judging.table.lastname'|trans }}</th>
                                        <th class="all">{{ 'egt.judging.table.club'|trans }}</th>
                                        <th class="all">{{ 'egt.judging.table.category'|trans }}</th>
                                        <th class="all">{{ 'egt.judging.table.grade'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                                <button id="{{ loop.index }}_button" class="btn pull-right btn-success save"
                                        data-round="{{ loop.index }}" {% if loop.index != round %}disabled{% endif %}><i
                                            class="fa fa-save"></i>{{ 'egt.judging.table.save'|trans }}</button>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block dialog %}
{% endblock %}