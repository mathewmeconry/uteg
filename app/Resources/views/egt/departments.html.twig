{% trans_default_domain 'uteg' %}

{% extends "base.html.twig" %}

{% block title %}{{ 'egt.departments.title'|trans }}{% endblock %}

{% block script %}
    <script>
        {% if is_granted('SETTINGS_EDIT', comp) %}

        $('#department-save').click(function () {
            var values = {};
            $.each($('#departmentEditForm').serializeArray(), function (i, field) {
                values[field.name] = field.value;
            });

            var url = ($('#dialog-edit-body form').attr('action').indexOf('edit') > -1) ? $('#dialog-edit-body form').attr('action') + "/" + $("#dialog-edit").data('s2c_id') : $('#dialog-edit-body form').attr('action');

            $.ajax({
                type: "POST",
                url: url,
                data: values
            }).success(function (data) {
                if (data == 'true') {
                    $('#dialog-edit').modal('hide');
                    showFlashbag();
                    $('.panel-refresh').click();
                } else {
                    $('#dialog-edit-body').html(data);
                }
            });
        });

        $('#department-remove').click(function () {
            $.ajax({
                type: "POST",
                url: "{{ path('departmentRemove', { 'compid': app.request.get('compid')}) }}",
                data: {id: $("#dialog-remove").data('dep_id')}
            }).success(function (data) {
                if (data == 'true') {
                    $('#dialog-remove').modal('hide');
                    showFlashbag();
                    $('.panel-refresh').click();
                }
            });
        });

        $('.control-add').click(function () {
            $.ajax({
                url: "{{ path('departmentAdd', { 'compid': app.request.get('compid')}) }}",
                method: "POST"
            }).success(function (data) {
                $('#dialog-edit-body').html(data);
            });

            $('#dialog-edit-modal-title').html('Add new');
            $('#dialog-edit').modal('show');
        });
        {% endif %}
    </script>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div id="panel_invites" class="panel panel-default" style="min-height: 400px;">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'egt.departments.header'|trans }}</h3>
                    <ul class="panel-controls">
                        {% if is_granted('SETTINGS_EDIT', comp) %}
                            <li><a href="#" class="control-primary control-add"><span class="fa fa-plus"></span></a>
                            </li>
                        {% endif %}
                        <li><a href="#" class="control-primary panel-fullscreen"><span class="fa fa-expand"></span></a>
                        </li>
                    </ul>
                </div>
                <div class="panel-body">

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block dialog %}
    {% if is_granted('SETTINGS_EDIT', comp) %}
        <div class="modal fade" id="dialog-edit" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="dialog-edit-modal-title"></h4>
                    </div>
                    <div id="dialog-edit-body" class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" id="department-save"
                                class="btn btn-success">{{ 'department.add.save'|trans }}</button>
                        <button type="button" class="btn btn-default"
                                data-dismiss="modal">{{ 'department.add.cancel'|trans }}</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}