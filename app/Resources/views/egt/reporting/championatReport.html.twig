{% trans_default_domain 'uteg' %}

<head>
    <meta charset="UTF-8"/>
    <title>{{ 'egt.reporting.judging.title'|trans }}</title>
    <style>
        tbody > tr:nth-child(even) {
            background-color: #c7c7c7;
        }

        table > thead > tr > th, table > tbody > tr {
            font-size: 10pt;
        }

        table {
            width: 100%; text-align: left; border-collapse: collapse;font-family: 'Quicksand', sans-serif;
        }

        td {
            padding-top: 10px; width: 20%;
        }

        tr {
            page-break-inside: avoid; color: #656d78;
        }
    </style>
</head>
<body>
{% if error is not defined %}
    <h2 style="color: #434a54; font-weight: bold; page-break-before: always;">Championat</h2>
    <table id="championat_table"
           data-device="{{ app.request.get('deviceid') }}"
           class="table table-striped table-hover"
           width="100%">
        <thead>
        <tr>
            <th class="all">{{ 'egt.judging.table.firstname'|trans }}</th>
            <th class="all">{{ 'egt.judging.table.lastname'|trans }}</th>
            <th class="all">{{ 'egt.judging.table.club'|trans }}</th>
            <th class="all">{{ 'egt.judging.table.category'|trans }}</th>
            <th class="all">{{ 'egt.judging.table.grade'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for starter in starters %}
            <tr>
                <td>{{ starter.firstname }}</td>
                <td>{{ starter.lastname }}</td>
                <td>{{ starter.club }}</td>
                <td>{{ starter.category }}</td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
</body>