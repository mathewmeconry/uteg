{% extends "UtegBaseBundle::baseAnon.html.twig" %}

{% trans_default_domain 'UtegBase' %}

{% block title %}{{ 'invite.club.title'|trans }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-success" style="min-height: 400px;">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'invite.club.header'|trans }}</h3>
                </div>
                <div class="panel-body">
                    <p class="text-center"><img src="{{ asset("/img/icons/icon-success-green.png") }}" alt=""></p>
                    <h2 class="text-center">{{ 'invite.club.success'|trans }}</h2>
                    <p class="text-center"><small>{{ 'invite.club.close'|trans }}</small></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
